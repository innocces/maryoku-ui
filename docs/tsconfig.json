{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "src": ["src/*"],
      "pages/*": ["src/pages/*"],
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "constants/*": ["src/constants/*"],
      "styles/*": ["src/styles/*"],
      "utils/*": ["src/utils/*"]
    }
  }
}
